{
  "hosting": [
    {
      "target": "user",
      "public": "./packages/user/dist",
      "predeploy": [
        "yarn workspace user build"
      ],
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "firestore": {
    "rules": "./packages/rules/firestore.rules"
  }
}