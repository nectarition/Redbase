{
  "hosting": [
    {
      "target": "user",
      "public": "./packages/user/dist",
      "predeploy": [
        "yarn workspace user build"
      ],
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "firestore": {
    "rules": "./packages/rules/firestore.rules"
  },
  "functions": {
    "runtime": "nodejs20",
    "source": "./packages/functions",
    "predeploy": [
      "yarn workspace functions build"
    ],
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ]
  }
}